<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="350dp"
    android:layout_height="250dp"
    android:padding="10dp"
    android:id="@+id/karticaIzdelka">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/robovi">

        <TextView
            android:id="@+id/izdelek_ime_txt"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="ime 1"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/izdelek_kategorija_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="kategorija 1"
            android:textColor="#878787"
            android:textSize="14dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/izdelek_ime_txt"
            tools:layout_editor_absoluteY="52dp" />

        <TextView
            android:id="@+id/izdelek_cena_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="105dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:text="cena 1"
            android:textColor="@color/black"
            android:textSize="34dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gumb_dodaj"
            app:layout_constraintVertical_bias="1.0" />


        <TextView
            android:id="@+id/izdelek_slika_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="slika 1"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:visibility="invisible"
            tools:layout_editor_absoluteX="36dp"
            tools:layout_editor_absoluteY="181dp" />

        <TextView
            android:id="@+id/izdelek_id_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="84dp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/gumb_dodaj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            app:backgroundTint="@color/sivomodra"
            app:tint="@color/white"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ikona_dodaj" />

        <ImageView
            android:id="@+id/slikaIzdelka"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_margin="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>